<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean name="constructorGreetingService" class="com.davor.di.DavorDependencyInjection.service.ConstructorGreetingService"/>
    <bean name="propertyGreetingService" class="com.davor.di.DavorDependencyInjection.service.PropertyGreetingService"/>
    <bean name="setterGreetingService" class="com.davor.di.DavorDependencyInjection.service.SetterGreetingService"/>
    <bean name="primaryGreetingService" class="com.davor.di.DavorDependencyInjection.service.PrimaryGreetingService" primary="true"/>
    <bean id="internationalMessages" name="internationalMessages" class="com.davor.di.DavorDependencyInjection.repository.InternationalMessagesImpl"/>


    <beans profile="ES">
        <bean id="i18nService" name="i18NSpanishGreetingService" class="com.davor.di.DavorDependencyInjection.service.I18NSpanishGreetingService"/>
    </beans>

    <beans profile="EN">
        <bean id="i18nService" name="i18NEnglishGreetingService" class="com.davor.di.DavorDependencyInjection.service.I18NEnglishGreetingService">
            <constructor-arg index="0" ref="internationalMessages"/>
        </bean>
    </beans>



</beans>